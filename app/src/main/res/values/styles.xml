<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- MAIN STYLES -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- ELEMENTS -->
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="materialButtonStyle">@style/AppTheme.MaterialButton</item>
    </style>

    <!-- ### GENERAL ### -->
    <!-- Containers -->
    <style name="AppTheme.Root"></style>
    <style name="AppTheme.Root.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/page_margin_large</item>
        <item name="android:layout_marginTop">@dimen/page_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/page_margin_large</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- Text -->
    <style name="AppTheme.Body.Title" parent="@android:style/Widget.Material.TextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- ### ELEMENTS ### -->
    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ddd</item>
    </style>

    <!-- MaterialButton -->
    <style name="AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@drawable/materialbutton_background_color</item>
        <item name="android:textColor">@drawable/materialbutton_text_color</item>
    </style>

    <!-- TextInputLayout -->
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/AppTheme.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="AppTheme.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- ProgressBar spinner -->
    <style name="AppTheme.ProgressBar">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="AppTheme.ProgressBar.Medium" parent="AppTheme.ProgressBar">
        <item name="android:maxHeight">50dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
    </style>
    <style name="AppTheme.ProgressBar.Small" parent="AppTheme.ProgressBar">
        <item name="android:maxHeight">25dp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
    </style>

</resources>
